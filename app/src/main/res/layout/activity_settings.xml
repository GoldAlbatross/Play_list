<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_60dp"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/ys_display_medium"
        android:foreground="?attr/selectableItemBackground"
        android:gravity="center_vertical"
        android:text="@string/settings"
        android:textColor="@color/black"
        android:textSize="@dimen/size_22sp"
        android:paddingStart="@dimen/size_16dp"
        android:paddingEnd="64dp"
        app:icon="@drawable/ic_array_back"
        app:iconGravity="textStart"
        app:iconPadding="28dp"
        app:iconTint="@android:color/black" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/switch1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:fontFamily="@font/ys_display_regular"
        android:paddingHorizontal="@dimen/size_16dp"
        android:paddingVertical="@dimen/size_21dp"
        android:text="@string/night_theme"
        android:textColor="@color/black"
        android:textSize="@dimen/size_16sp" />


    <Button
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_60dp"
        android:backgroundTint="@color/white"
        android:paddingHorizontal="@dimen/size_16dp"
        android:drawableEnd="@drawable/ic_share"
        android:fontFamily="@font/ys_display_regular"
        android:foreground="?attr/selectableItemBackground"
        android:gravity="start|center_vertical"
        android:text="@string/share_app"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="@dimen/size_16sp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_60dp"
        android:foreground="?attr/selectableItemBackground"
        android:backgroundTint="@color/white"
        android:paddingHorizontal="@dimen/size_16dp"
        android:fontFamily="@font/ys_display_regular"
        android:text="@string/support"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="@dimen/size_16sp"
        android:gravity="start|center_vertical"
        android:drawableEnd="@drawable/ic_head" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_60dp"
        android:foreground="?attr/selectableItemBackground"
        android:backgroundTint="@color/white"
        android:paddingHorizontal="@dimen/size_16dp"
        android:fontFamily="@font/ys_display_regular"
        android:text="@string/terms_of_use"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="@dimen/size_16sp"
        android:gravity="start|center_vertical"
        android:drawableEnd="@drawable/ic_array_go_to" />
</LinearLayout>