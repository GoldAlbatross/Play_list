<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSecondary"
    android:orientation="vertical"
    tools:context=".SettingsActivity">

    <Button
        style="@style/button_max_width"
        android:fontFamily="@font/ys_display_medium"
        android:gravity="center_vertical"
        android:text="@string/settings"
        android:textSize="@dimen/size_22sp"
        app:icon="@drawable/ic_array_back"
        app:iconGravity="textStart"
        app:iconPadding="28dp"
        app:iconTint="?attr/colorOnSecondary" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/switch1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        app:fontFamily="@font/ys_display_regular"
        android:paddingHorizontal="@dimen/size_16dp"
        android:paddingVertical="@dimen/size_21dp"
        android:text="@string/night_theme"
        android:textColor="?attr/colorOnSecondary"
        android:textSize="@dimen/size_16sp" />

    <Button
        android:id="@+id/btn_sharing"
        style="@style/button_max_width"
        android:drawableEnd="@drawable/ic_share"
        android:text="@string/night_theme" />

    <Button
        android:id="@+id/btn_support"
        style="@style/button_max_width"
        android:drawableEnd="@drawable/ic_head"
        android:text="@string/support" />

    <Button
        android:id="@+id/btn_agreement"
        style="@style/button_max_width"
        android:drawableEnd="@drawable/ic_array_go_to"
        android:text="@string/terms_of_use"/>
</LinearLayout>