<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".screens.media_lib.activity.MediaLibActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/back_btn"
        android:theme="@style/BaseRipple"
        style="@style/toolbar">
        <TextView style="@style/text_for_toolbar" />
    </androidx.appcompat.widget.Toolbar>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/size_16dp"
        android:background="@android:color/transparent"
        app:tabIndicatorColor="?attr/colorPrimaryVariant"
        app:tabIndicatorFullWidth="true"
        app:tabTextAppearance="@style/tab_layout"
        app:tabTextColor="?attr/colorPrimaryVariant"
        app:tabRippleColor="@color/blue" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="@dimen/size_16dp"/>

</LinearLayout>