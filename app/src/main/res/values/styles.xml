<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="button" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="backgroundTint">@null</item>
        <item name="android:background">@drawable/ripple</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/size_22sp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/size_10dp</item>
        <item name="iconTint">@color/black</item>
    </style>

    <style name="button_max_width" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/size_56dp</item>
        <item name="paddingStart">@dimen/size_16dp</item>
        <item name="paddingEnd">@dimen/size_16dp</item>
        <item name="backgroundTint">@null</item>
        <item name="android:background">@drawable/ripple_max_width_btn</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="iconTint">?attr/colorPrimaryVariant</item>
    </style>

    <style name="text_for_btn_max_width">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/size_64dp</item>
        <item name="android:layout_marginEnd">@dimen/size_64dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">?attr/colorPrimaryVariant</item>
        <item name="android:textSize">@dimen/size_22sp</item>
        <item name="android:text">@string/search</item>
    </style>

    <style name="edit_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginTop">@dimen/size_8dp</item>
        <item name="android:layout_marginStart">@dimen/size_16dp</item>
        <item name="android:layout_marginEnd">@dimen/size_16dp</item>
        <item name="android:background">@drawable/shape_edittext</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:textColorHint">?attr/colorOnSecondary</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/size_16sp</item>
        <item name="android:inputType">textCapSentences|textAutoCorrect</item>
        <item name="android:maxLines">1</item>
        <item name="android:maxLength">50</item>
        <item name="android:drawableStart">@drawable/ic_lens_14</item>
        <item name="android:drawablePadding">@dimen/size_10dp</item>
    </style>

    <style name="image_clearing">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">38dp</item>
        <item name="android:layout_marginEnd">2dp</item>
        <item name="android:background">@drawable/shape_close_x</item>
        <item name="android:src">@drawable/ic_close_x</item>
    </style>

    <style name="switcher">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/size_60dp</item>
        <item name="android:layout_marginTop">@dimen/size_24dp</item>
        <item name="android:paddingStart">@dimen/size_16dp</item>
        <item name="android:paddingEnd">@dimen/size_16dp</item>
        <item name="thumbTint">?attr/colorSecondaryVariant</item>
        <item name="trackTint">@color/blue</item>
    </style>

</resources>