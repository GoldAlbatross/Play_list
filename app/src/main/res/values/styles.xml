<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="main_button" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="backgroundTint">@null</item>
        <item name="android:background">@drawable/ripple</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_22sp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/size_10dp</item>
        <item name="iconTint">@color/black</item>
    </style>

    <style name="button_max_width" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/size_56dp</item>
        <item name="paddingStart">@dimen/size_16dp</item>
        <item name="paddingEnd">@dimen/size_16dp</item>
        <item name="backgroundTint">@null</item>
        <item name="android:background">@drawable/ripple_max_width_btn</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="iconTint">?attr/colorPrimaryVariant</item>
    </style>

    <style name="text_for_btn_max_width">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/size_64dp</item>
        <item name="android:layout_marginEnd">@dimen/size_64dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">?attr/colorPrimaryVariant</item>
        <item name="android:textSize">@dimen/text_size_22sp</item>
        <item name="android:text">@string/search</item>
    </style>

    <style name="text_for_recycler_item">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textColor">?attr/colorSecondaryVariant</item>
        <item name="android:textSize">@dimen/text_size_11sp</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="edit_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">38dp</item>
        <item name="android:layout_marginStart">@dimen/size_16dp</item>
        <item name="android:layout_marginEnd">@dimen/size_16dp</item>
        <item name="android:background">@drawable/shape_edittext</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:textColorHint">?attr/colorOnSecondary</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="android:inputType">textCapSentences</item>
        <item name="android:maxLines">1</item>
        <item name="android:maxLength">50</item>
        <item name="android:drawableStart">@drawable/ic_lens_14</item>
        <item name="android:drawablePadding">@dimen/size_10dp</item>
    </style>

    <style name="image_clearing">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">38dp</item>
        <item name="android:layout_marginEnd">2dp</item>
        <item name="android:background">@drawable/shape_close_x</item>
        <item name="android:src">@drawable/ic_close_x</item>
    </style>

    <style name="switcher">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/size_60dp</item>
        <item name="android:layout_marginTop">@dimen/size_38dp</item>
        <item name="android:paddingStart">@dimen/size_16dp</item>
        <item name="android:paddingEnd">@dimen/size_16dp</item>
        <item name="track">@drawable/switch_track</item>
        <item name="android:thumb">@drawable/switch_circle</item>
    </style>

    <style name="toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/size_56dp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="navigationIcon">@drawable/ic_array_back</item>
    </style>

    <style name="text_for_toolbar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/size_16dp</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">?attr/colorPrimaryVariant</item>
        <item name="android:textSize">@dimen/text_size_22sp</item>
    </style>

    <style name="text_for_dummy">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">?attr/colorPrimaryVariant</item>
        <item name="android:textSize">@dimen/text_size_19sp</item>
    </style>

    <style name="refresh_btn">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="backgroundTint">@null</item>
        <item name="android:background">@drawable/search_dummy_ripple_refresh</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">?attr/colorSecondary</item>
        <item name="android:textSize">@dimen/text_size_14sp</item>
    </style>

    <style name="text_for_player_left">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="layout_constraintHorizontal_bias">0.0</item>
        <item name="android:textColor">@color/text_gray</item>
        <item name="android:textSize">@dimen/text_size_13sp</item>
        <item name="android:layout_marginTop">@dimen/size_8dp</item>
    </style>

    <style name="text_for_player_right">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_marginStart">@dimen/size_50dp</item>
        <item name="layout_constrainedWidth">true</item>
        <item name="layout_constraintHorizontal_bias">1.0</item>
        <item name="android:textColor">?attr/colorPrimaryVariant</item>
        <item name="android:textSize">@dimen/text_size_13sp</item>
        <item name="android:layout_marginTop">@dimen/size_8dp</item>
    </style>

    <style name="progress_bar">
        <item name="android:layout_width">@dimen/size_56dp</item>
        <item name="android:layout_height">@dimen/size_56dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateTint">@color/blue</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="tab_layout">
        <item name="textAllCaps">false</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/text_size_14sp</item>
    </style>

</resources>